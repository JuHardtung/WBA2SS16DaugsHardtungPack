<%- include ../head %>

 <div class="row">
    <div class="container-fluid">
                <div class="container">
                    <div class="col-md-5">
                        <div class="product col-md-3">
                            <center>
                                <div id="bild"><img id="<%= article.name %>_image" src="http://placehold.it/320x150" class="img-responsive" alt=""></div>
                                <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
                                    <script type="text/javascript">
                                        var keyword = "<%= article.name %>";



                                        $.getJSON("http://api.flickr.com/services/feeds/photos_public.gne?jsoncallback=?", {
                                                tags: keyword,
                                                tagmode: "any",
                                                format: "json"
                                            },
                                            function(data) {
                                                var rnd = Math.floor(Math.random() * data.items.length);
                                                var image_src = data.items[rnd].media.m.replace("_m", "_b");

                                                document.getElementById('<%= article.name %>_image').setAttribute("src", image_src);



                                            });
                                    </script>
                            </center>
                        </div>
                    </div>

                    <div class="col-md-7">
                        <div class="product-title">
                            <%= article.name %>
                        </div>
                        <div class="product-desc">
                            <%= article.description %>
                        </div>
                        <div class="ratings">
                                        <p id="reviewbox_<%= article.id %>" class="pull-right">15 reviews</p>
                                        <p id="starbox_<%= article.id %>">
                                            <script type="text/javascript">
                                                 var rnd = Math.floor(Math.random() * 5)+1;
                                                var htmlElements = "";
                                                for (var i = 0; i < rnd; i++) {
                                                    htmlElements += '<span class="glyphicon glyphicon-star"></span>';
                                                }
                                                var container = document.getElementById("starbox_<%= article.id %>");
                                                document.getElementById("reviewbox_<%= article.id %>").innerHTML = Math.floor(Math.random() * 100)+1+" Bewertungen";
                                                container.innerHTML = htmlElements;
                                            </script>
                                        </p>
                                    </div>
                        <hr>
                        <div class="product-price">
                            <%= article.price %>,- â‚¬
                        </div>
                        <div class="product-stock" <% if (article.storage > 0) { %> style="color:#00FF26"> <% } else { %> style="color:#00FF26"> <% } %>
                            <%= article.storage %> auf Lager.
                        </div>
                        <hr>
                        <div class="btn-group cart">
                            <button type="button" class="btn btn-success">
                                Add to cart
                            </button>
                        </div>
                        <div class="btn-group wishlist">
                            <button type="button" class="btn btn-danger">
                                Add to wishlist
                            </button>
                        </div>
                    </div>
                </div>
            </div>
 </div>


    <%- include ../foot %>