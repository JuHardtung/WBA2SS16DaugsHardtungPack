<script>
    $(document).ready(function() {

    $('#login').click(function() {
        var user = $("#inputUser").val();
        var password = $("#inputPassword").val();
        var remember = $("#remember").val();
        $.post("/login", {
                userName: user,
                password: password,
                remember: remember
            },
            function(data, status) {
                if(data=="ok"){
                  location.reload();
                }else{
                  $("#inputUser").effect( "shake", {times:4}, 1000 );
                  $("#inputPassword").effect( "shake", {times:4}, 1000 );
                }
            });
    });
    });

</script>
